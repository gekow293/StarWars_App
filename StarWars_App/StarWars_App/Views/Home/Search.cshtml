@model SearchModel

<div class="row row-cols-1 row-cols-md-2 g-4">
    @foreach (var item in Model.Characters)
    {
        <div class="col">
            <div class="card mb-3" style="max-width: 540px; border-radius: 10px; border-width: 3px 3px 3px 3px; margin:auto">
                <div class="row g-0" style="margin: 5px;">
                    <div class="col-md-1" style="width: 20px">
                    </div>
                    <div class="col-md-7">
                        <h3>@item.Name</h3>
                        <h6 style="margin-top: -5px;">@item.NameOrign</h6>
                    </div>
                    <div class="col-md-4">
                        <div class="row" style="margin-top: 18px;">
                            <div class="col-2" style="width: 50px; margin-left: 60px;">
                                <a asp-action="CharacterInfo" asp-route-id=@item.Id asp-area="" asp-controller="Home">
                                    <img src="~/img/info-2.png" />
                                </a>
                            </div>
                            <div class="col-2" style="width: 50px; margin-left: 20px;">
                                <a asp-action="EditCharacter" asp-route-id=@item.Id asp-area="" asp-controller="Home">
                                    <img src="~/img/edit-1.png" />
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
